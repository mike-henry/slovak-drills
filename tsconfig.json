{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,         // ← JS is allowed
    "checkJs": false,        // ← doesn't type-check JS yet
    "strict": false,         // ← loosen rules until you're ready
    "isolatedModules": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "vite.config.*", "vitest.config.*"]
}

